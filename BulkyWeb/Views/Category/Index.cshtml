@model List<Category> //Model is a list of Category in the CategoryController
<partial name="_Notification" />  @* notification from share/ notification *@ 


<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h1 class="text-primary">Category List</h1>
		</div>
		<div class="col-6" text-end>
			<button>
				<a asp-controller="Category" asp-action="Create"> add new </a>

			</button>
			
		</div>
	</div>
	<table class="table table-boarded table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>DisplayOrder</th>
				<th>Name</th>

			</tr>
		</thead>
		<tbody>
			@* To take the date from @model use Model(pascal type)  *@
			@foreach (var item in Model.OrderBy(a => a.Name))
			{
				<tr>
					<td> @item.Id</td>
					<td>@item.DisplayOrder</td>
					<td>@item.Name</td>
					<td class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@item.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@item.Id" class="btn btn-primary mx-2">
							<i class="bi bi-trash-fill"></i> Delete
						</a>
					</td>
				</tr>
			}

		</tbody>

	</table>

</div>
