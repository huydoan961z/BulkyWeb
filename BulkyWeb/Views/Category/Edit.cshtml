<h1>Edit page</h1>
@model Category
<h2>Welcome to create view</h2>
<form method="post">
	<input type="hidden" asp-for="Id" /> <!-- Thêm input ẩn cho ID cho asp biết -->

	<div class="form-group">
		<label asp-for="Name" for="categoryName"></label>
		<input asp-for="Name" type="text" class="form-control" id="categoryName" placeholder="Enter category name">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="DisplayOrder" for="displayOrder"></label>
		<input asp-for="DisplayOrder" type="text" class="form-control" id="displayOrder" placeholder="Enter display order">
		<span asp-validation-for="DisplayOrder" class="text-danger"></span>

	</div>

	<button type="submit" class="btn btn-primary">Update</button>
	<button type="submit" class="btn btn-primary"><a asp-controller="Category" asp-action="index">Cancel</a></button>

</form>